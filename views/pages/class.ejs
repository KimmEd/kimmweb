<% if (!classroom) { %>
<h1>Class not found</h1>
<% } else { %>
<nav class="light-theme">
  <div class="nav-wrapper">
    <div class="container">
      <button onclick="display('Posts')">Posts</button>
      <button onclick="display('Members')">Members</button>
      <button onclick="display('Settings')">Settings</button>
    </div>
  </div>
</nav>
<section id="content">
  <div class="header">
    <h2><%- classroom.className%></h2>
  </div>

  <div class="row">
    <div class="leftcolumn">
      <% if (!cards) { %>
      <div class="card">
        <h2>No posts yet</h2>
      </div>
      <% } else { %>
      <% cards.filter(a => a.cardType == 'post').forEach(function(card) { %>
        <article>
          <div class="card">
            <h2><%- card.content.title %></h2>
            <h5><%- card.content.description %> </h5>
            <p><%- card.content.text %></p>
            <div class="card-bottom">
              <span>
                Author here
              </span>
              <span>
                <%- card.timeStamp %>
            </div>
          </div>
        </article>
      <% }) %>
    <% } %> 
    </div>
    <div class="rightcolumn">
      <div class="card">
        <h2>About Me</h2>
        <div class="fakeimg" style="height: 100px">Image</div>
        <p>Some text about me in culpa qui officia deserunt mollit anim..</p>
      </div>
      <div class="card">
        <h3>Popular Post</h3>
        <div class="fakeimg">Image</div>
        <br />
        <div class="fakeimg">Image</div>
        <br />
        <div class="fakeimg">Image</div>
      </div>
      <div class="card">
        <h3>Follow Me</h3>
        <p>Some text..</p>
      </div>
    </div>
  </div>
</section>
<section id="classroomAbout hidden" hidden>
  <div class="container light-theme">
    <h1><%- classroom.className %></h1>
    <div class="row">
      <div class="col-md-6">
        <h2>Class Details</h2>
        <table class="table table-striped">
          <tr>
            <th>Class Name</th>
            <td><%- classroom.className %></td>
          </tr>
          <tr>
            <th>Class Number</th>
            <td><%= classroom._id %></td>
          </tr>
          <tr>
            <th>Class Description</th>
            <td><%= classroom.classDescription %></td>
          </tr>
          <tr>
            <th>Class Instructor</th>
            <td><%= classroom.classTeacher %></td>
          </tr>
          <tr>
            <th>Class Time</th>
            <td><%= classroom.classTime %></td>
          </tr>
          <tr>
            <th>Class Days</th>
            <td><%= classroom.classDays %></td>
          </tr>
          <tr>
            <th>Class Capacity</th>
            <td><%= classroom.classCapacity %></td>
          </tr>
          <tr>
            <th>Class Enrolled</th>
            <td><%= classroom.classEnrolled %></td>
          </tr>
        </table>
      </div>
      <div class="col-md-6">
        <h2>Class Enrollment</h2>
        <table class="table table-striped">
          <tr>
            <th>Student Name</th>
            <th>Student Email</th>
            <th>Student Phone</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</section>

<% } %>

<a href="/hub/class/id/<%- classroom._id %>/post" class="float">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="60"
    height="60"
    fill="currentColor"
    class="bi bi-plus"
    viewBox="0 0 16 16"
  >
